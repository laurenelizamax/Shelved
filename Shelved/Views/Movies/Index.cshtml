@model IEnumerable<Shelved.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>My Movies</h1>

<a asp-action="WishList">Wish List</a> |
<a asp-action="WatchList">Watch List</a> |
<a asp-action="SeenList">Seen That</a>

<form asp-action="Index" asp-controller="Movies">
    <label>Search Movies by Title or Year: </label>
    <input name="searchMovies" type="text" />
    <input class="btn btn-success" type="submit" value="Search" />
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWatched)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                Genres
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsWatched)
            </td>
            <td>
                <img style="max-height: 70px; min-height: 60px;" class="img-responsive" src="@Url.Content("~/images/" + item.ImagePath)" alt="" />
            </td>
            <td>
                @foreach (var genre in item.MovieGenres)
                {
                    <div>
                        @Html.DisplayFor(modelItem => genre.GenresForMovies.Description)
                    </div>
                }
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
