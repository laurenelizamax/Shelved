@model IEnumerable<Shelved.Models.Movie>

@{
    ViewData["Title"] = "WatchList";
}

<h1>Movie Watch List</h1>

<a asp-action="WatchList">Watch List</a> |
<a asp-action="WishList">Wish List</a> |
<a asp-action="SeenList">I've Seen That</a> |
<a asp-action="Index">Back to My Movies</a>

<form asp-action="WatchList" asp-controller="Movies">
    <label>Search Watch List by Title or Year: </label>
    <input name="searchWatchList" type="text" />
    <input class="btn btn-success" type="submit" value="Search" />
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                Genres
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    <img style="max-height: 70px; min-height: 60px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + item.ImagePath)" alt="" />
                </td>
                <td>
                    @foreach (var genre in item.MovieGenres)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => genre.GenresForMovies.Description)
                        </div>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
