@model Shelved.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsWatched)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsWatched)
        </dd>
    </dl>
    <dl>
        <h5>This Movie is on the following lists:</h5>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyMovies)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyMovies)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WatchList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WatchList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeenList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeenList)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> &nbsp;
        <a class="btn btn-outline-dark" asp-action="Index">Back to My Movies</a>
    </form>
</div>
