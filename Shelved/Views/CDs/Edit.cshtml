@model Shelved.Models.ViewModels.CDViewModel

@{
    ViewData["Title"] = "Edit";
}

    <h3>Edit @Model.Title</h3>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHeard" /> @Html.DisplayNameFor(model => model.IsHeard)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" class="form-control" />
                <img class="img-responsive" src="@Url.Content("~/images/" + Model.ImagePath)" alt="" style="max-width:150px" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreIds" class="control-label"></label>
                <select multiple asp-for="GenreIds" class="form-control" asp-items="ViewBag.GenresForCDs"></select>
            </div>

            <h6>Which list would you like to add your cd to?</h6>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MyMusic" /> @Html.DisplayNameFor(model => model.MyMusic)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WishList" /> @Html.DisplayNameFor(model => model.WishList)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ListenList" /> @Html.DisplayNameFor(model => model.ListenList)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HeardList" /> @Html.DisplayNameFor(model => model.HeardList)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to My Music</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
