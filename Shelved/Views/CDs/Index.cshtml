@model ReflectionIT.Mvc.Paging.PagingList<Shelved.Models.CD>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging


@{
    ViewData["Title"] = "Index";
}

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            @*Photo by israel palacio on Unsplash*@
            @*<img src="~/images//music2.jpg" alt="cds" style="max-height: 90px; min-height: 80px;">  &nbsp;*@


            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="CDs" asp-action="Index">My Music</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="WishList">Wish List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="ListenList">Listen List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="HeardList">I've Heard That</a>
                    </li>
                    <li class="nav-item">
                        <form method="get" class="form-inline">
                            <label></label>
                            <input name="searchMusic" class="form-control" placeholder="Search by Album or Artist"
                                   value="@Model.RouteValue["searchMusic"]" /> &nbsp; &nbsp;
                            <button type="submit" class="btn btn-outline-dark">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                            </button>
                        </form>
                    </li>  &nbsp; &nbsp;
                    <li class="nav-item">
                        <p>
                            <a class="btn btn-outline-danger" asp-action="Create">Add An Album</a>
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</body>



<div>
    <div style="text-align: center">
        <img align="center" src="~/images//music3.jpg" alt="books" style="max-height: 300px; min-height: 200px; max-width:1200px; min-width:1000px;">  &nbsp;
    </div>

</div>

<nav aria-label="CDs">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHeard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                Genres
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHeard)
                </td>
                <td>
                    <img style="max-height: 70px; min-height: 60px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + item.ImagePath)" alt="" />
                </td>
                <td>
                    @foreach (var genre in item.CDGenres)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => genre.GenresForCDs.Description)
                        </div>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-danger mt-3 btn-create-new-group" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="CDs">
    <vc:pager paging-list="@Model"/>
</nav>