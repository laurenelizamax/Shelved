@model ReflectionIT.Mvc.Paging.PagingList<Shelved.Models.CD>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging


@{
    ViewData["Title"] = "Index";
}

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            @*Photo by israel palacio on Unsplash*@
            <img src="~/images//music2.jpg" alt="cds" style="max-height: 90px; min-height: 80px;">  &nbsp;

            <a class="navbar-brand" asp-area="" asp-controller="CDs" asp-action="Index">My Music</a>

            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="WishList">Wish List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="ListenList">Listen List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CDs" asp-action="HeardList">I've Heard That</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</body>

<form method="get" class="form-inline">
    <label>Search Music by Title or Artist: </label>
    <input name="searchMusic" class="form-control" placeholder="Search Your Music"
           value="@Model.RouteValue["searchMusic"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
    </button>
</form>

<nav aria-label="CDs">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHeard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                Genres
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHeard)
                </td>
                <td>
                    <img style="max-height: 70px; min-height: 60px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + item.ImagePath)" alt="" />
                </td>
                <td>
                    @foreach (var genre in item.CDGenres)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => genre.GenresForCDs.Description)
                        </div>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">CD Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="CDs">
    <vc:pager paging-list="@Model" />
</nav>