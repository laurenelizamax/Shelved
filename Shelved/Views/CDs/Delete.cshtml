@model Shelved.Models.CD

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete This CD</h1>

<h3>Are you sure you want to delete this CD?</h3>
<div>
    <h4>CD</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    <dl>
        <h5>This CD is on the following Lists:</h5>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyMusic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyMusic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListenList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListenList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeardList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeardList)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to My Music</a>
    </form>
</div>
