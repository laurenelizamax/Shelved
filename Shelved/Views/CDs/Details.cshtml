@model Shelved.Models.CD

@{
    ViewData["Title"] = "Details";
}

<div class="card" style="width: 34rem;">
    <div class="card-body">
        <h3 class="card-title">
            @Html.DisplayFor(model => model.Title)

        </h3>
        <div>
            <img style="max-height: 250px; min-height: 100px; max-width:200px; min-width:100px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + Model.ImagePath)" alt="" />
        </div>
        <br />
        <div>
            <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsHeard)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsHeard)
            </dd>
            <dt class="col-sm-2">
                Genres
            </dt>
            <dd class="col-sm-10">
                @foreach (var item in Model.CDGenres)
                {
                    <div>
                        @Html.DisplayFor(modelItem => item.GenresForCDs.Description) &nbsp;
                    </div>
                }
            </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Index">Back to My Music</a>
        </div>
        </div>
</div>