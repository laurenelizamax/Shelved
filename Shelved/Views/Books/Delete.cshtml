@model Shelved.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        </dl>
        <h5>This Book is on the following lists:</h5>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyBooks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyBooks)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadItList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadItList)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to My Books</a>
    </form>
</div>
