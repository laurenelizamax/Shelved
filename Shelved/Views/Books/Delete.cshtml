@model Shelved.Models.Book

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this book?</h3>
<div>
    <div>
        <img style="max-height: 250px; min-height: 100px; max-width:200px; min-width:100px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + Model.ImagePath)" alt="" />
    </div>

        <h3>
            @Html.DisplayFor(model => model.Title)
        </h3>
        <h4>
           By: @Html.DisplayFor(model => model.Author)
        </h4>
    <br />
    <h6>This Book is on the following lists:</h6>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyBooks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyBooks)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadItList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadItList)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> &nbsp;
        <a class="btn btn-outline-dark" asp-action="Index">Back to My Books</a>
    </form>
</div>
