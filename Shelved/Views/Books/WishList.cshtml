@model IEnumerable<Shelved.Models.Book>

@{
    ViewData["Title"] = "WishList";
}

<h1>WishList</h1>

<a asp-action="WishList">Wish List</a> |
<a asp-action="ReadList">Read List</a> |
<a asp-action="ReadItList">I've Read That</a> |
<a asp-action="Index">Back to My Books</a>

<form asp-action="WishList" asp-controller="Books">
    <label>Search Wish List for books by Title or Author: </label>
    <input name="searchWishList" type="text" />
    <input class="btn btn-success" type="submit" value="Search" />
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                Genres
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRead)
                </td>
                <td>
                    <img style="max-height: 60px; min-height: 60px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + item.ImagePath)" alt="" />
                </td>
                <td>
                    @foreach (var genre in item.BookGenres)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => genre.GenresForBooks.Description)
                        </div>
                    }
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
