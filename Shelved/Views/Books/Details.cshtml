@model Shelved.Models.Book

@{
    ViewData["Title"] = "Details";
}


<div class="card" style="width: 34rem;">
    <div class="card-body">
        <h3 class="card-title">
            @Html.DisplayFor(model => model.Title)
        </h3>
        <br />
            <div>
                <img style="max-height: 250px; min-height: 100px; max-width:200px; min-width:100px;" class="img-responsive bookImage" src="@Url.Content("~/images/" + Model.ImagePath)" alt="" />
            </div>
            <br />
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Author):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Author)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Year):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Year)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsRead)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsRead)
                    </dd>
                    <dt class="col-sm-2">
                        Genres:
                    </dt>
                    <dd class="col-sm-10">
                        @foreach (var item in Model.BookGenres)
                        {
                            <div>
                                @Html.DisplayFor(modelItem => item.GenresForBooks.Description) &nbsp;
                            </div>
                        }
                    </dd>

                </dl>
                <div>
                    <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    <a class="btn btn-outline-dark mt-3 btn-create-new-group" asp-action="Index">Back to My Books</a>
                </div>
            </div>
        </div>
    </div>

          
